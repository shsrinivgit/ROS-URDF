<?xml version="1.0"?>
<robot name="mira">

    <material name="green">
        <color rgba="0 0.8 0 1"/>
    </material>
    <material name="orange">
        <color rgba="1 0.6 0 1"/>
    </material>

    <link name="base_link">
        <visual>
        <origin rpy="0 1 0" xyz="0.1 0 0"/>
        <geometry>
            <sphere radius="0.04"/>
        </geometry>
        <material name="orange"/>
        </visual>
    </link>

    <link name="roll_M1_link">
        <visual>
            <origin rpy="1 0 0" xyz="0 0.1 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="green"/>
        </visual>
    </link>

    <joint name="roll_joint" type="continuous">
        <parent link="base_link"/>
        <child link="roll_M1_link"/>
        <origin xyz=" 0.0023 0 -0.0005" rpy="0 0 0"/>
        <limit lower="0" upper="0" effort="0.1" velocity="0.005"/>
        <axis xyz="0 1 0"/>
    </joint>
</robot>